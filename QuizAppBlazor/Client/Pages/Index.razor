@page "/"
@using QuizAppBlazor.Shared.DTOs
@inject HttpClient Http
<div class="d-flex flex-column">
    <h1 class="align-self-center title flex-wrap">Pick a quiz!</h1>
    <div class="d-flex flex-wrap align-self-center">
        @if (quizzes == null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            @foreach (var quiz in quizzes)
            {
                <div class="card btn btn-primary" style="width: 18rem; margin: 15px;">
                    <div class="card-body">
                        <h5 class="card-title">@quiz.Title</h5>
                        <p class="card-text">@quiz.Description</p>
                        @* <a href="#" class="btn btn-primary">Take quiz</a> *@
                    </div>
                </div>
            }
        }
    </div>
</div>




@code{
    private GetQuizDTO[]? quizzes;

    protected override async Task OnInitializedAsync()
    {
        quizzes = await Http.GetFromJsonAsync<GetQuizDTO[]>("api/quiz");
    }
}
