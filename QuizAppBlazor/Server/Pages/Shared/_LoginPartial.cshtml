@using Microsoft.AspNetCore.Identity
@using QuizAppBlazor.Server.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav bg-primary">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a href="/" class="nav-link text-light">Home</a>
    </li>
    <li class="nav-item">
            <a href="/newquiz" class="nav-link text-light">New Quiz</a>
    </li>
    <li class="nav-item">
            <a href="/profile" class="nav-link text-light">Profile</a>
    </li>
    <li>
            <a href="authentication/profile" class="nav-link text-light">Settings</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a href="/" class="nav-link text-light">Home</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-light" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-light" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
